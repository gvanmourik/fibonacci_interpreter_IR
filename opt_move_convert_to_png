#! /usr/bin/env bash

## Modify in future to take optimization flags
FILENAME=tempDir
OPT_TARGET_FILE=$1
CFG_IMG_DIR=$2

OPT_CALL="opt -dot-cfg $OPT_TARGET_FILE"
$OPT_CALL
echo -e "\n\nOptimization call:"
echo -e "$OPT_CALL\n"

echo moving generated files...
mkdir $FILENAME
mv *.dot $FILENAME/
cd $FILENAME

echo converting to image files...
for file in *.dot; do
	dot -T png -O "$file"
done

cd ../
echo "making new directory $CFG_IMG_DIR/..."
mkdir $CFG_IMG_DIR
echo "moving images files to $CFG_IMG_DIR/..."
mv $FILENAME/*.png $CFG_IMG_DIR
rm -rf $FILENAME/
